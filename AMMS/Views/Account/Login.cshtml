@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<div class="star">
    <form method="post">
        <div class="row">
            <div class="col-sm-offset-1 col-sm-4">
                <h2>@ViewData["Title"]</h2>
            </div>
            <div class="col-sm-7">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-offset-1 col-sm-4 form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" placeholder="username@us.army.mil" class="form-control" value="aaron.l.day@us.army.mil" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <a asp-action="RequestAccount">Request account</a>
            </div>
            <div class="col-sm-4 form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" placeholder="Pa$$w0rd" class="form-control" value="Secret123$" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <a asp-action="ForgotPassword">Forgot password</a>
            </div>
            <div class="row form-group">
                <div class="col-sm-3 text-center">
                    <button type="submit" title="Log in" class="btn btn-link">
                        <span aria-hidden="true" class="fa fa-arrow-circle-right fa-4x text-center"></span>
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
