@model IEnumerable<AMMS.Models.AccountViewModels.RoleListViewModel>

@{
    ViewData["Title"] = "List";
}

<h2>List</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfUsers)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfUsers)
                </td>
                <td>
                    @Html.ActionLink("", "List", "Account", new { value = item.RoleName }, new { @class = "btn btn-default fa fa-users", title = "Users" }) |
                    @Html.ActionLink("", "Details", new { id = item.Id }, new { @class = "btn btn-info fa fa-info", title = "Details" })
                    @Html.ActionLink("", "Edit", new { id = item.Id }, new { @class = "btn btn-warning fa fa-edit", title = "Edit" })
                    @Html.ActionLink("", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fa fa-trash", title = "Delete" })
                    @Html.HiddenFor(modelItem => item.Id)
                </td>
            </tr>
        }
    </tbody>
</table>
