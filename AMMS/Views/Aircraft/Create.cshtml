@model AMMS.Models.ViewModels.AircraftViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Aircraft</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SerialNumber" class="control-label"></label>
                <input asp-for="SerialNumber" class="form-control" />
                <span asp-validation-for="SerialNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AcftHrs" class="control-label"></label>
                <input asp-for="AcftHrs" class="form-control" />
                <span asp-validation-for="AcftHrs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AircraftModelId" class="control-label"></label>
                <select asp-for="AircraftModelId" class="form-control">
                    @foreach (var m in @ViewBag.Models)
                    {
                        <option value="@m.Id">@m.Mds</option>
                    }
                </select>
                <span asp-validation-for="AircraftModelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitId" class="control-label"></label>
                <input asp-for="UnitId" value="@TempData["ParentId"]" class="form-control" />
                <span asp-validation-for="UnitId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="" asp-controller="Aircraft" asp-action="List" asp-route-parentId="@TempData["ParentId"]">Logbooks</a>
    @Html.ActionLink("Back to List", "Index", new { parentId = ViewBag.ParentId })
</div>

