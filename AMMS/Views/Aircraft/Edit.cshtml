@model AMMS.Models.ViewModels.AircraftViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Aircraft</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" />
            <input type="hidden" asp-for="UnitId" class="form-control" />
            <div class="form-group">
                <label asp-for="AircraftModelId" class="control-label"></label>
                <select asp-for="AircraftModelId" class="form-control">
                    @foreach (var m in @ViewBag.Models)
                    {
                        <option value="@m.Id">@m.Mds</option>
                    }
                </select>
                <span asp-validation-for="AircraftModelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SerialNumber" class="control-label"></label>
                <input asp-for="SerialNumber" class="form-control" />
                <span asp-validation-for="SerialNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AcftHrs" class="control-label"></label>
                <input asp-for="AcftHrs" class="form-control" />
                <span asp-validation-for="AcftHrs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index", new { parentId = Model.UnitId })
</div>

