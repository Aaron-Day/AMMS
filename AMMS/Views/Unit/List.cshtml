@model IEnumerable<AMMS.Models.ViewModels.UnitViewModel>

@{
    ViewData["Title"] = "List";
}

<h2>List</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UIC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Station)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UIC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Station)
                </td>
                <td>
                    @Html.ActionLink("", "Index", "Aircraft", new { parentId = item.Id }, new { @class = "btn btn-default fa fa-fighter-jet", title = "Aircraft" }) |
                    @Html.ActionLink("", "Details", new { id = item.Id }, new { @class = "btn btn-info fa fa-info", title = "Details" })
                    @Html.ActionLink("", "Edit", new { id = item.Id }, new { @class = "btn btn-warning fa fa-edit", title = "Edit" })
                    @Html.ActionLink("", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fa fa-trash", title = "Delete" })
                    @Html.HiddenFor(modelItem => item.Id)
                </td>
            </tr>
        }
    </tbody>
</table>
