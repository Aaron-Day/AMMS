            <div class="form-group">
                <label asp-for="Rounds" class="control-label"></label>
                <input asp-for="Rounds" class="form-control" />
                <span asp-validation-for="Rounds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActionCode" class="control-label"></label>
                <select asp-for="ActionCode" class="form-control">
                    <option value="A">Replaced</option>
                    <option value="B">Adjusted</option>
                    <option value="C">Repaired</option>
                    <option value="D">Manufacture/Fabrication</option>
                    <option value="F">Initial Inspection</option>
                    <option value="G">Final Inspection</option>
                    <option value="H">MWO Applied</option>
                    <option value="J">Tested</option>
                    <option value="K">In Process Inspection</option>
