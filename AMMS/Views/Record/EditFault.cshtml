                    <option value="R">Removed</option>
                    <option value="S">Installed</option>
                    <option value="T">SOF/ASAM/TB SOU/TB Compliance</option>
                    <option value="U">Decontamination</option>
                    <option value="W">Hour Meter Change</option>
                    <option value="X">Gun Change</option>
                    <option value="Y">Special Mission Alteration Apply/Applied</option>
                    <option value="1">Servicing/Scheduled</option>
                    <option value="2">Servicing/Unscheduled</option>
                    <option value="3">PMD/PMS/PMS-1</option>
                    <option value="4">Maintenance Test Flight/MOC</option>
                    <option value="5">Periodic/Phase/PPM Inspection</option>
                    <option value="6">Special Inspection</option>
                    <option value="7">Ground Handling</option>
                    <option value="8">SAMS Unique Code</option>
                    <option value="9">Modification By Replacement</option>
                </select>
                <span asp-validation-for="ActionCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompWUC" class="control-label"></label>
                <input asp-for="CompWUC" class="form-control" />
                <span asp-validation-for="CompWUC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Action" class="control-label"></label>
                <input asp-for="Action" class="form-control" />
                <span asp-validation-for="Action" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompPID" class="control-label"></label>
                <input asp-for="CompPID" class="form-control" />
                <span asp-validation-for="CompPID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompCat" class="control-label"></label>
                <input asp-for="CompCat" class="form-control" />
                <span asp-validation-for="CompCat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompHrs" class="control-label"></label>
                <input asp-for="CompHrs" class="form-control" />
                <span asp-validation-for="CompHrs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TIPID" class="control-label"></label>
                <input asp-for="TIPID" class="form-control" />
                <span asp-validation-for="TIPID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TIManHrs" class="control-label"></label>
                <input asp-for="TIManHrs" class="form-control" />
                <span asp-validation-for="TIManHrs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TIPassword" class="control-label"></label>
                <input asp-for="TIPassword" class="form-control" />
                <span asp-validation-for="TIPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListFault" asp-route-parentId="@Model.AircraftId">Back to List</a>
</div>

