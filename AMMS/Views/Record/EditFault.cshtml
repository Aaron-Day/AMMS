                    <option value="8">Incident/Accident</option>
                    <option value="9">Off Aircraft Maintenance</option>
                </select>
                <span asp-validation-for="MalEff" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Delay" class="control-label"></label>
                <input asp-for="Delay" class="form-control" />
                <span asp-validation-for="Delay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WUC" class="control-label"></label>
                <input asp-for="WUC" class="form-control" />
                <span asp-validation-for="WUC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompDate" class="control-label"></label>
                <input asp-for="CompDate" class="form-control" />
                <span asp-validation-for="CompDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompTime" class="control-label"></label>
                <input asp-for="CompTime" class="form-control" />
                <span asp-validation-for="CompTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompAcftHrs" class="control-label"></label>
                <input asp-for="CompAcftHrs" class="form-control" />
