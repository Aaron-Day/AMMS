@model IEnumerable<AMMS.Models.ViewModels.RelatedMaintenanceViewModel>

@{
    ViewData["Title"] = "Related Maintenance List";
}

<h2>Related Maintenance List</h2>
<p>@ViewBag.FaultText</p>
<p>
    <a asp-action="CreateRelatedMaintenance" asp-route-parentId="@ViewBag.ParentId">Create New Related Maintenance Task</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RelatedMaintenanceAction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorrectiveAction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MMH)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TIPID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TIManHrs)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RelatedMaintenanceAction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CorrectiveAction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MMH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TIPID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TIManHrs)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditRelatedMaintenance", new { id = item.Id }) |
                    @Html.ActionLink("Details", "DetailsRelatedMaintenance", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteRelatedMaintenance", new { id = item.Id })
                    @Html.HiddenFor(modelItem => item.Id)
                    @Html.HiddenFor(modelItem => item.FaultStatus)
                    @Html.HiddenFor(modelItem => item.SerialNumber)
                    @Html.HiddenFor(modelItem => item.SystemCode)
                    @Html.HiddenFor(modelItem => item.FaultDate)
                    @Html.HiddenFor(modelItem => item.FaultNumber)
                    @Html.HiddenFor(modelItem => item.FaultText)
                    @Html.HiddenFor(modelItem => item.TIPassword)
                    @Html.HiddenFor(modelItem => item.FaultId)
                </td>
            </tr>
        }
    </tbody>
</table>
